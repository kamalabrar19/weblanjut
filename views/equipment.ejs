<h1>Office Equipment</h1>
<form action="/equipment/add" method="POST">
  <input type="text" name="name" placeholder="Name" required>
  <input type="text" name="type" placeholder="Type" required>
  <input type="number" name="quantity" placeholder="Quantity" required>
  <button type="submit">Add Equipment</button>
</form>

<ul>
  <% equipment.forEach((item) => { %>
    <li>
      <%= item.name %> (<%= item.type %>) - <%= item.quantity %>
      <form action="/equipment/edit/<%= item.id %>" method="POST">
        <input type="text" name="name" value="<%= item.name %>" required>
        <input type="text" name="type" value="<%= item.type %>" required>
        <input type="number" name="quantity" value="<%= item.quantity %>" required>
        <button type="submit">Update</button>
      </form>
      <form action="/equipment/delete/<%= item.id %>" method="POST">
        <button type="submit">Delete</button>
      </form>
    </li>
  <% }); %>
</ul>
